# Ticket Service Environment Variables

# Service Configuration
HOST=0.0.0.0
PORT=8003
ENVIRONMENT=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Zoho Desk Configuration
ZOHO_CLIENT_ID=
ZOHO_CLIENT_SECRET=
ZOHO_REDIRECT_URI=http://localhost:8003/auth/callback
ZOHO_SCOPE=Desk.tickets.ALL,Desk.contacts.ALL,Desk.basic.READ
ZOHO_AUTHORIZATION_CODE=
ZOHO_REFRESH_TOKEN=
ZOHO_ACCESS_TOKEN=
ZOHO_ORG_ID=

# Zoho API Configuration
ZOHO_API_BASE_URL=https://desk.zoho.com/api/v1
ZOHO_ACCOUNTS_URL=https://accounts.zoho.com
ZOHO_TOKEN_ENDPOINT=/oauth/v2/token

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Queue Configuration
TICKET_QUEUE_NAME=tickets:pending
TICKET_RETRY_ATTEMPTS=3
TICKET_RETRY_DELAY=5

# Logging
LOG_LEVEL=info
STRUCTURED_LOGGING=true

# Metrics
PROMETHEUS_PORT=9003
ENABLE_METRICS=true