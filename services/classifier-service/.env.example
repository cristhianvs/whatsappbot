# Classifier Service Environment Variables

# Service Configuration
HOST=127.0.0.1
PORT=8001
ENVIRONMENT=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AI Model Configuration
OPENAI_API_KEY=
GOOGLE_API_KEY=
ANTHROPIC_API_KEY=

# Model Selection (openai, google, anthropic)
PRIMARY_AI_MODEL=openai
FALLBACK_AI_MODEL=google

# Model Parameters
MODEL_TEMPERATURE=0.1
MAX_TOKENS=1000
MODEL_NAME=gpt-4o-mini

# Vector Database (optional for future use)
CHROMADB_HOST=localhost
CHROMADB_PORT=8000

# Logging
LOG_LEVEL=info
STRUCTURED_LOGGING=true

# Metrics
PROMETHEUS_PORT=9001
ENABLE_METRICS=true