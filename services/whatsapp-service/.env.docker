# Service Configuration
PORT=3001
NODE_ENV=development
SERVICE_NAME=whatsapp-service

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_CHANNEL_INBOUND=whatsapp:messages:inbound
REDIS_CHANNEL_OUTBOUND=whatsapp:messages:outbound
REDIS_CHANNEL_NOTIFICATIONS=whatsapp:notifications
REDIS_CHANNEL_STATUS=whatsapp:status

# WhatsApp Configuration (migrated from original .env)
WHATSAPP_SESSION_NAME=bot-session
WHATSAPP_PHONE_NUMBER=5215530482752:1
WHATSAPP_PRINT_QR=true
WHATSAPP_MARK_ONLINE=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/whatsapp-service.log

# Health Check Configuration
HEALTH_CHECK_PORT=3001
HEALTH_CHECK_INTERVAL=30000

# Security Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900000